# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Optional: Service role key (server-side only, for webhooks)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs (create these in your Stripe Dashboard)
# Free: $0 (no price ID needed)
# Standard: $49/month
STRIPE_PRICE_STANDARD=price_xxx
# Pro: $89/month
STRIPE_PRICE_PRO=price_xxx
# Elite: $149/month
STRIPE_PRICE_ELITE=price_xxx

# Sightengine - Photo & Text Moderation
# Get your API keys at https://sightengine.com
SIGHTENGINE_API_USER=your-api-user
SIGHTENGINE_API_SECRET=your-api-secret

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://masseurmatch.com
NEXT_PUBLIC_APP_URL=https://masseurmatch.com

# Email Configuration
# Choose provider: resend, sendgrid, or leave empty for dev mode
EMAIL_PROVIDER=resend
EMAIL_FROM=MasseurMatch <noreply@masseurmatch.com>

# Resend (https://resend.com)
RESEND_API_KEY=re_xxx

# SendGrid (alternative - https://sendgrid.com)
# SENDGRID_API_KEY=SG.xxx

# Cron Job Security
# Used to authenticate cron job requests
CRON_SECRET=your-cron-secret-here
